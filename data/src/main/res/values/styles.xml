<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/Base.AppTheme.Toolbar</item>
        <item name="drawerArrowStyle">@style/Base.DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/Base.ActionButtonOverflow</item>
    </style>

    <style name="Base.AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Base.AppTheme.Toolbar.TitleTextAppearance</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Base.AppTheme.Toolbar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="Base.ActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>
</resources>